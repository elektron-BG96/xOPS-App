<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             xmlns:vm="clr-namespace:Saplin.xOPS.UI.ViewModels"
             x:Class="Saplin.xOPS.UI.MainPage"
             BindingContext="{x:Static vm:VmLocator.TestRun}"
             >

    <!--<StackLayout Rotation="-90" >

        <Label x:Name="lbl" Text="Welcome to Xamarin.Forms!"
               BackgroundColor="Black"
           HorizontalOptions="Center"
           VerticalOptions="CenterAndExpand" />
    </StackLayout>-->

    <Grid>
      <Grid.RowDefinitions>
        <RowDefinition Height="*" />
        <RowDefinition Height="*" />
      </Grid.RowDefinitions>
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*" />
        <ColumnDefinition Width="*" />
      </Grid.ColumnDefinitions>

      <StackLayout Grid.Row="0" Grid.Column="0" Orientation="Vertical" >
          <Label x:Name="stLabel" Text="Single Threaded" Rotation="-90" WidthRequest="160" Margin="0, 0, -50, 50" BackgroundColor="Blue"
            VerticalOptions="EndAndExpand" HorizontalOptions="End" HeightRequest="60" VerticalTextAlignment="Center" HorizontalTextAlignment="Start"/> 
         
          
          <StackLayout VerticalOptions="End" HorizontalOptions="End" Orientation="Horizontal" >
              <Label Text="Floating" HeightRequest="60"
                     VerticalOptions="End" HorizontalOptions="FillAndExpand" HorizontalTextAlignment="End" VerticalTextAlignment="Center"/>
              <Label Text="1.3 GFLOPS" FontSize="12"  WidthRequest="60" HeightRequest="60" BackgroundColor="Red" TextColor="White"
                     HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
          </StackLayout>
      </StackLayout>

      <Label Text="Box 2" Grid.Row="0" Grid.Column="1" WidthRequest="60" HeightRequest="60" BackgroundColor="Red" TextColor="White"
             VerticalOptions="End" HorizontalOptions="Start" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>

      <StackLayout Grid.Row="1" Grid.Column="0" VerticalOptions="Start" HorizontalOptions="End" Orientation="Horizontal">
          <Label Text="Integer" HeightRequest="60"
                 VerticalOptions="End" HorizontalOptions="FillAndExpand" HorizontalTextAlignment="End" VerticalTextAlignment="Center"/>
          <Label Text="1.2 INOPS" FontSize="12"  WidthRequest="60" HeightRequest="60" BackgroundColor="Red" TextColor="White"
                 HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
      </StackLayout>

      <Label Text="Box 4" Grid.Row="1" Grid.Column="1" WidthRequest="60" HeightRequest="60" BackgroundColor="Red" TextColor="White"
             VerticalOptions="Start" HorizontalOptions="Start" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
    </Grid>

</ContentPage>
