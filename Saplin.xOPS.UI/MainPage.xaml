<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             xmlns:vm="clr-namespace:Saplin.xOPS.UI.ViewModels"
             x:Class="Saplin.xOPS.UI.MainPage"
             BindingContext="{x:Static vm:VmLocator.TestRun}"
             >

    <!--<StackLayout Rotation="-90" >

        <Label x:Name="lbl" Text="Welcome to Xamarin.Forms!"
               BackgroundColor="Black"
           HorizontalOptions="Center"
           VerticalOptions="CenterAndExpand" />
    </StackLayout>-->

    <Grid>
      <Grid.RowDefinitions>
        <RowDefinition Height="2*" />
        <RowDefinition Height="1*" />
        <RowDefinition Height="1*" />
      </Grid.RowDefinitions>
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*" />
        <ColumnDefinition Width="*" />
      </Grid.ColumnDefinitions>

      <StackLayout Grid.Row="0" Grid.Column="0" Orientation="Vertical" >
          <Label x:Name="stLabel" Text="Single Threaded" Rotation="-90" WidthRequest="160" Margin="0, 0, -40, 50" 
            VerticalOptions="EndAndExpand" HorizontalOptions="End" HeightRequest="70" VerticalTextAlignment="Center" HorizontalTextAlignment="Start"/> 
         
          
          <StackLayout VerticalOptions="End" HorizontalOptions="End" Orientation="Horizontal" >
              <Label Text="Floating " HeightRequest="70"
                     VerticalOptions="End" HorizontalOptions="FillAndExpand" HorizontalTextAlignment="End" VerticalTextAlignment="Center"/>
              <Label Text="{Binding FloatSingleThreaded, TargetNullValue='↖', StringFormat='{0:0.00}&#10;GFLOPS'}, }" FontSize="12"  WidthRequest="70" HeightRequest="70" BackgroundColor="Red" TextColor="White"
                     HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
          </StackLayout>
      </StackLayout>

      <StackLayout Grid.Row="0" Grid.Column="1" Orientation="Vertical" >
          <Label x:Name="mtLabel" Text="Multi Threaded" Rotation="-90" WidthRequest="160" Margin="-50, 0, 0, 50" 
            VerticalOptions="EndAndExpand" HorizontalOptions="Start" HeightRequest="70" VerticalTextAlignment="Center" HorizontalTextAlignment="Start"/> 
         
          
          <StackLayout VerticalOptions="End" HorizontalOptions="Start" Orientation="Horizontal" >
              <Label Text="{Binding FloatMultiThreaded, TargetNullValue='↗', StringFormat='{0:0.00}&#10;GFLOPS'}}"  FontSize="12"  WidthRequest="70" HeightRequest="70" BackgroundColor="Red" TextColor="White"
                     HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
          </StackLayout>
      </StackLayout>

      <StackLayout Grid.Row="1" Grid.Column="0" VerticalOptions="Start" HorizontalOptions="End" Orientation="Horizontal">
          <Label Text="Integer " HeightRequest="70"
                 VerticalOptions="End" HorizontalOptions="FillAndExpand" HorizontalTextAlignment="End" VerticalTextAlignment="Center"/>
          <Label Text="{Binding IntSingleThreaded, TargetNullValue='↙', StringFormat='{0:0.00}&#10;GINOPS'}, TargetNullValue='-'}"  FontSize="12"  WidthRequest="70" HeightRequest="70" BackgroundColor="Red" TextColor="White"
                 HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
      </StackLayout>

      <Label Text="{Binding IntMultiThreaded, TargetNullValue='↘', StringFormat='{0:0.00}&#10;GINOPS'}, TargetNullValue='-'}"  FontSize="12" Grid.Row="1" Grid.Column="1" WidthRequest="70" HeightRequest="70" BackgroundColor="Red" TextColor="White"
             VerticalOptions="Start" HorizontalOptions="Start" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>

        <Button Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Text="↻ Retry" BackgroundColor="BLue"
                VerticalOptions="Center" HorizontalOptions="Center" Command="{Binding Retry}" IsVisible="{Binding TestNotStarted}"/>

        <Button Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Text="¾ Break" BackgroundColor="DarkGray"
                VerticalOptions="Center" HorizontalOptions="Center" Command="{Binding Break}" IsVisible="{Binding TestStarted}"/>
    </Grid>

</ContentPage>
